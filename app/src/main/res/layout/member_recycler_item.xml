<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_round_corners"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/memberPhoto"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/user_profile_temp"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Member name"
                android:textColor="@color/text_color"/>



            <TextView
                android:id="@+id/memberLocationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Данные о местоположении отсутствуют"
                android:textColor="@color/text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/memberBatteryLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_battery_full_black_24dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="5dp"/>


                <TextView
                    android:id="@+id/networkStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/signal_icon"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="5dp"
                    android:text="WiFi"/>


                <TextView
                    android:id="@+id/lastLocationUpdateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_history_black_24dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="5dp"
                    android:text="22:22"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_call_black_24dp"
            android:background="@drawable/circle_bg"
            android:layout_marginEnd="10dp"
            android:tint="@color/text_color"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_message_black_24dp"
            android:background="@drawable/circle_bg"
            android:layout_marginEnd="10dp"
            android:tint="@color/text_color"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:background="@drawable/circle_bg"
            android:tint="@color/text_color"/>
    </LinearLayout>




</LinearLayout>