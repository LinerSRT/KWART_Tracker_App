<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отсканируйте следующий код, что бы синхронизировать устройства"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/shareQRCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/qr_scan"
        android:scaleType="center"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Данный код необходимо сканировать в нашем приложении в специальном разделе"
        android:textSize="12sp"
        android:textColor="@color/text_color_secondary"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/finishShareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="Готово"
        android:textSize="12sp"
        android:padding="5dp"/>


</LinearLayout>